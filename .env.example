# Production настройки для Tutor Platform
# Скопируйте этот файл в .env и измените значения

# Основные настройки приложения
NODE_ENV=production
PORT=3000

# URL для взаимодействия между сервисами (внутри Docker network)
MAIN_APP_URL=http://main-app:3000
NOTIFICATION_SERVICE_URL=http://notification-service:3001
ANALYTICS_SERVICE_URL=http://analytics-service:3002

# Настройки Redis (раскомментируйте если используете)
# REDIS_URL=redis://redis:6379
# REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_IN_PRODUCTION

# Настройки безопасности (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ В PRODUCTION!)
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION_MINIMUM_32_CHARACTERS_LONG
API_KEY=CHANGE_THIS_API_KEY_IN_PRODUCTION

# Настройки домена (для production)
DOMAIN=tutor-platform.yourdomain.com
SSL_ENABLED=false

# Настройки логирования
LOG_LEVEL=warn
LOG_FORMAT=combined

# Настройки Docker Compose
COMPOSE_PROJECT_NAME=tutor-platform-prod
COMPOSE_HTTP_TIMEOUT=120

# Порты для production (можно изменить при конфликтах)
PROD_PORT_MAIN=3000
PROD_PORT_NOTIFICATIONS=3001
PROD_PORT_ANALYTICS=3002
PROD_PORT_NGINX=80
PROD_PORT_NGINX_SSL=443

# Настройки ресурсов (лимиты Docker)
MAIN_APP_CPU_LIMIT=0.5
MAIN_APP_MEMORY_LIMIT=512M
SERVICE_CPU_LIMIT=0.3
SERVICE_MEMORY_LIMIT=256M

# Настройки мониторинга
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Backup и storage (если нужно)
# BACKUP_ENABLED=false
# BACKUP_SCHEDULE="0 2 * * *"  # Каждый день в 2:00